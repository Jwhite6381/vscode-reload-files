{
  "name": "vscode-reload-files",
  "displayName": "vscode-reload-files",
  "description": "better UX for reloading files in VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reload-files.reload.file",
        "title": "File: Reload"
      },
      {
        "command": "reload-files.reload.file.icon",
        "title": "Reload active file",
        "icon": "$(refresh)"
      },
      {
        "command": "reload-files.reload.file.context",
        "title": "Reload"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "reload-files.reload.file.icon",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "reload-files.reload.file.context",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out && cp -r src/test/tests-fs out/test",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}